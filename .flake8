[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .roo,
    .temp,
    node_modules,
    venv,
    .venv,
    env,
    .env,
    .pytest_cache,
    .benchmarks,
    *.egg-info,
    migration_output,
    .github,
    logs

ignore = E203,E501,W503,E302,E226,E231,E265,E402,E701,E722,E741,F401,F841
per-file-ignores = __init__.py:F401