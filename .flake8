[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .roo,
    .temp,
    node_modules,
    venv,
    .venv,
    env,
    .env,
    .pytest_cache,
    .benchmarks,
    *.egg-info,
    migration_output,
    .github,
    logs
# E203: whitespace before ':' (conflict with black)
# E501: line too long (handled by max-line-length)
# W503: line break before binary operator (conflict with black)
ignore =
    E203,
    E501,
    W503,
# F401: imported but unused in __init__.py files
per-file-ignores =
    __init__.py:F401