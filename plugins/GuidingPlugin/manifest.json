{
    "name": "GuidingPlugin",
    "version": "1.0.0",
    "author": "Core Team",
    "description": "A plugin to guide the analysis by identifying relevant categories of fallacies.",
    "spec": {
        "type": "standard",
        "entrypoint": "plugin.py",
        "class_name": "GuidingPlugin",
        "capabilities": [
            {
                "name": "suggest_categories",
                "description": "Suggests relevant fallacy categories to focus on for a given text.",
                "input_schema": {
                    "type": "object",
                    "properties": {
                        "text": {
                            "type": "string",
                            "description": "The text to analyze."
                        }
                    },
                    "required": ["text"]
                },
                "output_schema": {
                    "type": "object",
                    "properties": {
                        "relevant_categories": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "A list of suggested category names."
                        }
                    }
                }
            }
        ]
    }
}