{
    "name": "ExplorationPlugin",
    "version": "1.0.0",
    "author": "Core Team",
    "description": "A plugin to explore a specific fallacy category in a given text.",
    "spec": {
        "type": "standard",
        "entrypoint": "plugin.py",
        "class_name": "ExplorationPlugin",
        "capabilities": [
            {
                "name": "explore_fallacy",
                "description": "Analyzes a text for a specific fallacy based on its taxonomy.",
                "input_schema": {
                    "type": "object",
                    "properties": {
                        "text": {
                            "type": "string",
                            "description": "The text to analyze."
                        },
                        "taxonomy_path": {
                            "type": "string",
                            "description": "The path or name of the fallacy in the taxonomy."
                        },
                        "taxonomy_definition": {
                            "type": "string",
                            "description": "The definition of the fallacy to look for."
                        }
                    },
                    "required": ["text", "taxonomy_path", "taxonomy_definition"]
                },
                "output_schema": {
                    "type": "object",
                    "properties": {
                        "name": { "type": "string" },
                        "definition": { "type": "string" },
                        "confidence": { "type": "number" },
                        "evidence": { "type": "string" },
                        "explanation": { "type": "string" }
                    }
                }
            }
        ]
    }
}